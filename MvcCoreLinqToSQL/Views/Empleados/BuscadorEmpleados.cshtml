@model List<Empleado>

<h1>
	Buscador de empleados por oficio y salario
</h1>

<form method="post">
	<label>Oficio: </label>
	<input type="text" name="oficio" value="" class="form-control"/>

	<label>Salario: </label>
	<input type="number" name="salario" value="" class="form-control"/>

	<button class="btn btn-success">
		Buscar
	</button>
</form>

<h2>@ViewData["MENSAJE"]</h2>

@if(Model != null){
<table class="table table-striped">
	<thead>
		<tr>
			<th>Apellido</th>
			<th>Oficio</th>
			<th>Salario</th>
			<th>Detalles</th>
		</tr>
	</thead>
	<tbody>
		@foreach (Empleado empleado in Model)
		{
			<tr>
				<td>@empleado.Apellido</td>
				<td>@empleado.Oficio</td>
				<td>@empleado.Salario</td>
				<td><a asp-controller="Empleados" asp-action="Details" asp-route-idempleado="@empleado.IdEmpleado" class="btn btn-info">Details</a></td>
			</tr>
		}
	</tbody>
</table>
}